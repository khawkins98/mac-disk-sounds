{
  "name": "mac-disk-sounds",
  "version": "1.0.1-alpha.2",
  "description": "Retro HDD sound effects for disk activity",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder -mwl",
    "build:mac": "electron-builder -m",
    "build:win": "electron-builder -w",
    "build:linux": "electron-builder -l",
    "release": "electron-builder -mwl -p always"
  },
  "build": {
    "appId": "com.macdisksounds.app",
    "productName": "Mac Disk Sounds",
    "publish": {
      "provider": "github",
      "owner": "khawkins98",
      "repo": "mac-disk-sounds",
      "releaseType": "release"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "compression": "maximum",
    "asar": true,
    "asarUnpack": ["sounds/*"],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "icon.icns",
      "target": ["dmg", "zip"]
    },
    "win": {
      "icon": "icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "icon.iconset/icon_256x256.png",
      "target": ["AppImage", "deb", "rpm"],
      "category": "Utility",
      "maintainer": "Mac Disk Sounds Team",
      "description": "Bring back the nostalgic sounds of vintage hard drives"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "directories": {
      "buildResources": "build",
      "output": "dist"
    }
  },
  "keywords": ["electron", "mac", "windows", "linux", "disk", "sounds", "retro"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "howler": "^2.2.4"
  }
}
